<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        tools:text="Moana Moana Moana Moana Moana"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/primaryText"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_release_date"
        tools:text="2016"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_runtime"
        tools:text="107min"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_release_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
        android:layout_marginTop="8dp"
        android:textColor="@color/secondaryText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rating"
        app:layout_constraintLeft_toLeftOf="@+id/tv_runtime"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_runtime"
        tools:text="7.9/10"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/secondaryText" />

    <ImageView
        android:id="@+id/iv_share_movie_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_share"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rating" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_synopsis"
        tools:text="In Ancient Polynesia, when a terrible curse incurred by the Demigod Maui reaches an impetuous Chieftain's daughter's island, she answers the Ocean's call to seek out the Demigod to set things right."
        android:textColor="@color/primaryText"
        app:layout_constraintLeft_toLeftOf="@+id/iv_share_movie_button"
        app:layout_constraintTop_toBottomOf="@+id/iv_share_movie_button"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>